@model Login
@{
    
}

<h2>Login to your Account</h2>
<p>
    @using (Html.BeginForm("Search", "Login"))
    {
    <table>
        <tr>
            <td>ID: </td>
            <td>@Html.TextBoxFor(m => m.Id)</td>
            <td style="color:red">@Html.ValidationMessageFor(m => m.Id)</td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
            <td>Password: </td>
            <td>@Html.PasswordFor(m => m.Pwd)</td>
            <td style="color:red">@Html.ValidationMessageFor(m => m.Pwd)</td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
            <td style="text-align:center;" colspan="2"><button type="submit">Login</button></td>
        </tr>
    </table>
    }
</p>


<p style="align-self:center">@ViewBag.result</p>